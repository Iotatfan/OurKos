<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KosActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--        <androidx.appcompat.widget.SearchView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="@color/bg_color"-->
        <!--            android:orientation="horizontal"/>-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/namaKos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/pureBlack"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Hardcoded Area -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/images"
                    android:layout_width="130dp"
                    android:layout_height="130dp" />

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/fasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Fasilitas"
            android:textColor="@color/pureBlack"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.6"
                android:text="Listrik"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/okListrik"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_check_circle_outline_black_24"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/noListrik"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_clear_black_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.6"
                android:text="AC"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/okAC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_check_circle_outline_black_24"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/noAC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_clear_black_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.6"
                android:text="Air"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/okAir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_check_circle_outline_black_24"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/noAir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_clear_black_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.6"
                android:text="Kasur"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/okKasur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_check_circle_outline_black_24"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/noKasur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_clear_black_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.6"
                android:text="Wifi"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/okWifi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_check_circle_outline_black_24"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/noWifi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_clear_black_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.6"
                android:text="Kamar Mandi Dalam"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/okToilet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_check_circle_outline_black_24"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/noToilet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/round_clear_black_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.5"
                android:text="Kamar Tersedia"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/kamarKosong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.5"
                android:text=""
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Harga Sewa"
            android:textColor="@color/pureBlack"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.5"
                android:text="Harian"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/harga_harian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.5"
                android:text="nominal"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.5"
                android:text="Mingguan"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/harga_mingguan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.5"
                android:text="nominal"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.5"
                android:text="Bulanan"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/harga_bulanan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.5"
                android:text="nominal"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.5"
                android:text="Tahunan"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/harga_tahunan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.5"
                android:text="nominal"
                android:textColor="@color/pureBlack"
                android:textSize="20sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSewa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="32dp"
        app:fabSize="normal"
        android:background="@color/bg_color_dark"
        android:backgroundTint="@color/bg_color_dark"
        android:src="@drawable/baseline_shopping_cart_white_24"
        />


</RelativeLayout>