<!--            android:text="@string/back_to_login"-->
<!--            android:textColor="@color/pureWhite"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="16dp"-->
<!--            android:clickable="true">-->
<!--        </TextView>-->

    </LinearLayout>
</ScrollView>